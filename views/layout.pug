    head
        title Node App
        link(href="/dist/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
            a.navbar-brand(href='/') Node App
            button.navbar-toggler(aria-expanded='false', aria-controls='navbarSupportedContent', aria-label='Toggle navigation', type='button', data-target='#navbarSupportedContent', data-toggle='collapse')
                span.navbar-toggler-icon
