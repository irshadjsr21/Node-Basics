                        li.nav-item
                            a.nav-link(href='/article/add') Add Article
                ul.navbar-nav.ml-auto
                    if user
                        li.nav-item
                            a.nav-link(href='/user/logout') Logout
                    else
                        li.nav-item
                            a.nav-link(href='/user/register') Register
                        li.nav-item
                            a.nav-link(href='/user/login') Login
